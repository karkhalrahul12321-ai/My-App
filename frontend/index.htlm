<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Trading Helper</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    :root {
      --bg: #040712;
      --card: #0b1020;
      --card-soft: #11182a;
      --accent: #27f3c2;
      --accent-soft: rgba(39, 243, 194, 0.15);
      --accent-strong: #1de9b6;
      --accent-red: #ff4f6b;
      --accent-yellow: #ffc95c;
      --text-main: #f9fcff;
      --text-soft: #acb4d4;
      --border-subtle: rgba(255, 255, 255, 0.08);
      --glow: 0 0 30px rgba(39, 243, 194, 0.35);
      --radius-lg: 22px;
      --radius-sm: 14px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Inter",
        "Segoe UI", sans-serif;
    }

    body {
      min-height: 100vh;
      background: radial-gradient(circle at top, #1a2a4a 0, #040712 55%);
      color: var(--text-main);
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 18px 10px 30px;
    }

    .app-shell {
      width: 100%;
      max-width: 430px;
      margin: auto;
      background: linear-gradient(145deg, #070a14 0, #060816 35%, #05040c 100%);
      border-radius: 26px;
      box-shadow: 0 26px 70px rgba(0, 0, 0, 0.85);
      padding: 16px 16px 22px;
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .app-header {
      margin-bottom: 16px;
    }

    .app-title {
      font-size: 28px;
      letter-spacing: 0.04em;
      font-weight: 700;
    }

    .app-sub {
      font-size: 11px;
      color: var(--text-soft);
      margin-top: 4px;
    }

    .pill-row {
      display: flex;
      gap: 6px;
      margin-top: 8px;
      flex-wrap: wrap;
    }

    .pill {
      padding: 4px 9px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.13);
      font-size: 10px;
      color: var(--text-soft);
      backdrop-filter: blur(10px);
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.03),
        rgba(255, 255, 255, 0.02)
      );
    }

    .pill-strong {
      border-color: rgba(39, 243, 194, 0.6);
      color: var(--accent);
      box-shadow: 0 0 0 1px rgba(39, 243, 194, 0.35);
    }

    /* MAIN CARD */
    .card-main {
      margin-top: 10px;
      padding: 14px 12px 16px;
      border-radius: var(--radius-lg);
      background: radial-gradient(circle at top left, #1b2442, #090d1b);
      border: 1px solid rgba(255, 255, 255, 0.12);
    }

    .label {
      font-size: 11px;
      color: var(--text-soft);
      margin-bottom: 4px;
    }

    .server-input {
      width: 100%;
      padding: 10px 12px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.16);
      background: rgba(4, 6, 18, 0.9);
      color: var(--text-main);
      font-size: 13px;
      outline: none;
    }

    .server-input::placeholder {
      color: rgba(172, 180, 212, 0.7);
    }

    .form-section {
      margin-top: 14px;
      padding: 12px;
      border-radius: var(--radius-lg);
      background: radial-gradient(circle at top, #131b36, #070916);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .section-title {
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .field {
      margin-bottom: 10px;
    }

    .field label {
      display: block;
      font-size: 11px;
      color: var(--text-soft);
      margin-bottom: 4px;
    }

    .field input,
    .field select {
      width: 100%;
      padding: 10px 11px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      background: rgba(5, 7, 18, 0.94);
      color: var(--text-main);
      font-size: 13px;
      outline: none;
    }

    .field input::placeholder {
      color: rgba(172, 180, 212, 0.6);
    }

    .inline-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: 8px;
    }

    .chk-row {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 12px;
      color: var(--text-soft);
    }

    .chk-row input[type="checkbox"] {
      width: 18px;
      height: 18px;
      border-radius: 4px;
      accent-color: var(--accent);
    }

    .btn {
      width: 100%;
      padding: 12px 10px;
      border-radius: 999px;
      border: none;
      outline: none;
      font-size: 15px;
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      margin-top: 14px;
      cursor: pointer;
    }

    .btn-primary {
      background: linear-gradient(120deg, #29ffd3, #0af);
      color: #02040a;
      box-shadow: 0 0 25px rgba(34, 246, 214, 0.65);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .btn-secondary {
      background: rgba(10, 12, 26, 0.95);
      color: var(--text-main);
      border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .btn-primary:disabled {
      opacity: 0.6;
      box-shadow: none;
      cursor: wait;
    }

    /* RAW JSON (hidden normally) */
    .raw-output {
      display: none; /* parsing सही होने पर छुपा रहेगा */
      margin-top: 14px;
      padding: 10px;
      border-radius: var(--radius-sm);
      background: rgba(3, 5, 14, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.12);
      font-size: 11px;
      color: #9fa8d3;
      white-space: pre-wrap;
      max-height: 200px;
      overflow: auto;
    }

    /* NICE RESULT CARDS */
    .results-root {
      margin-top: 14px;
      padding: 12px;
      border-radius: var(--radius-lg);
      background: radial-gradient(circle at top, #151c34, #060814);
      border: 1px solid rgba(255, 255, 255, 0.09);
    }

    .results-root.hidden {
      display: none;
    }

    .results-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .results-title {
      font-size: 13px;
      font-weight: 600;
    }

    .status-chip {
      font-size: 10px;
      padding: 4px 8px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.18);
      background: rgba(4, 7, 18, 0.9);
      color: var(--accent);
    }

    .status-chip.bad {
      color: var(--accent-red);
      border-color: rgba(255, 79, 107, 0.8);
    }

    .status-chip.neutral {
      color: var(--text-soft);
    }

    .results-grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 8px;
      margin-bottom: 10px;
    }

    .result-card {
      padding: 8px 8px 9px;
      border-radius: var(--radius-sm);
      background: linear-gradient(145deg, #0a0f21, #050714);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .result-label {
      font-size: 10px;
      color: var(--text-soft);
      margin-bottom: 3px;
    }

    .result-value {
      font-size: 13px;
      font-weight: 600;
    }

    .result-badge {
      font-size: 9px;
      margin-top: 4px;
      padding: 2px 6px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.18);
      display: inline-block;
    }

    .result-badge.green {
      color: var(--accent);
      border-color: rgba(39, 243, 194, 0.8);
      background: rgba(39, 243, 194, 0.08);
    }

    .result-badge.yellow {
      color: var(--accent-yellow);
      border-color: rgba(255, 201, 92, 0.9);
      background: rgba(255, 201, 92, 0.1);
    }

    .result-badge.red {
      color: var(--accent-red);
      border-color: rgba(255, 79, 107, 0.9);
      background: rgba(255, 79, 107, 0.08);
    }

    .strikes-card {
      padding: 8px 8px 9px;
      border-radius: var(--radius-sm);
      background: rgba(5, 8, 18, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.08);
      font-size: 11px;
      color: var(--text-soft);
      margin-bottom: 8px;
    }

    .strike-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 4px;
    }

    .strike-row:last-child {
      margin-bottom: 0;
    }

    .comment-card {
      padding: 8px 8px 9px;
      border-radius: var(--radius-sm);
      background: rgba(4, 6, 16, 0.96);
      border: 1px solid rgba(255, 255, 255, 0.07);
      font-size: 11px;
      color: var(--text-soft);
      line-height: 1.4;
    }

    .error-text {
      margin-top: 6px;
      font-size: 10px;
      color: var(--accent-red);
    }

    @media (max-width: 380px) {
      .results-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }
  </style>
</head>
<body>
  <div class="app-shell" id="mainApp">
    <header class="app-header">
      <div class="app-title">Trading Helper</div>
      <div class="app-sub">Auto Future LTP · Trend Engine · Smart Strikes</div>
      <div class="pill-row">
        <span class="pill pill-strong">SmartAPI</span>
        <span class="pill">Nifty</span>
        <span class="pill">Sensex</span>
        <span class="pill">Natural Gas</span>
      </div>
    </header>

    <div class="card-main">
      <div class="label">Server URL (Render)</div>
      <input
        id="server"
        class="server-input"
        placeholder="https://my-app-xxxx.onrender.com" />
    </div>

    <section class="form-section">
      <div class="section-title">Market Inputs</div>

      <div class="field">
        <label for="ema20">EMA 20</label>
        <input id="ema20" type="number" placeholder="24500" />
      </div>

      <div class="field">
        <label for="ema50">EMA 50</label>
        <input id="ema50" type="number" placeholder="24650" />
      </div>

      <div class="field">
        <label for="rsi">RSI</label>
        <input id="rsi" type="number" step="0.01" placeholder="40.66" />
      </div>

      <div class="field">
        <label for="vwap">VWAP</label>
        <input id="vwap" type="number" placeholder="24400" />
      </div>

      <div class="field">
        <label for="spot">Spot / Future LTP</label>
        <input id="spot" type="number" placeholder="Manual spot" />
      </div>

      <div class="field">
        <label for="market">Market</label>
        <select id="market">
          <option value="nifty">Nifty</option>
          <option value="sensex">Sensex</option>
          <option value="natural gas">Natural Gas</option>
        </select>
      </div>

      <div class="field">
        <label for="expiry">Days to Expiry</label>
        <input id="expiry" type="number" value="7" />
      </div>

      <div class="inline-row">
        <div class="chk-row">
          <input id="useLive" type="checkbox" />
          <span>Use Live Data (Auto Future LTP)</span>
        </div>
      </div>

      <button id="calc" class="btn btn-primary">
        ⚡ Calculate
      </button>

      <button id="openSettings" class="btn btn-secondary">
        ⚙ SmartAPI Settings
      </button>
    </section>

    <!-- RAW JSON (hidden by default, debug purpose) -->
    <pre id="out" class="raw-output"></pre>

    <!-- PRETTY RESULT CARDS -->
    <section id="niceOutput" class="results-root hidden"></section>
  </div>

  <!-- तुम्हारा existing लॉजिक -->
  <script src="app.js"></script>

  <!-- EXTRA SCRIPT: JSON → Card Layout (A) -->
  <script>
    (function () {
      const raw = document.getElementById("out");
      const nice = document.getElementById("niceOutput");
      if (!raw || !nice) return;

      function escapeHtml(str) {
        return String(str)
          .replace(/&/g, "&amp;")
          .replace(/</g, "&lt;")
          .replace(/>/g, "&gt;");
      }

      function renderPretty(data) {
        if (!data || typeof data !== "object") {
          nice.classList.add("hidden");
          raw.style.display = "block";
          return;
        }

        const trend = data.trend || {};
        const strikes = Array.isArray(data.strikes) ? data.strikes : [];
        const meta = data.meta || {};
        const input = data.input || {};

        // login status chip
        let statusClass = "neutral";
        if (data.login_status && String(data.login_status).toLowerCase().includes("logged")) {
          statusClass = "green";
        } else if (data.login_status && String(data.login_status).toLowerCase().includes("not")) {
          statusClass = "bad";
        }

        const liveUsed = meta.live_data_used ? "Live Future" : "Manual";
        const liveLtp =
          meta.live_ltp != null
            ? Number(meta.live_ltp).toFixed(2)
            : (input.spot != null ? Number(input.spot).toFixed(2) : "–");

        let ce = strikes.find((s) => s.type === "CE") || {};
        let pe = strikes.find((s) => s.type === "PE") || {};
        let str = strikes.find((s) => s.type === "STRADDLE") || {};

        let errorText = "";
        if (meta.live_error && meta.live_error.reason) {
          errorText = String(meta.live_error.reason)
            .replace(/_/g, " ")
            .toLowerCase();
          errorText = errorText.charAt(0).toUpperCase() + errorText.slice(1);
        }

        // badge color for score
        let scoreBadgeClass = "yellow";
        const score = Number(trend.score || 0);
        if (score >= 70 || score <= 30) scoreBadgeClass = "green";
        if (score <= 20 || score >= 80) scoreBadgeClass = "red";

        const html = `
          <div class="results-header">
            <div class="results-title">Market Summary (${escapeHtml(
              (input.market || "nifty").toString().toUpperCase()
            )})</div>
            <div class="status-chip ${statusClass === "bad" ? "bad" : statusClass === "green" ? "" : "neutral"}">
              ${escapeHtml(data.login_status || "") || "Demo mode"}
            </div>
          </div>

          <div class="results-grid">
            <div class="result-card">
              <div class="result-label">Main Trend</div>
              <div class="result-value">${escapeHtml(trend.main || "–")}</div>
              <div class="result-badge">${escapeHtml(trend.strength || "–")}</div>
            </div>
            <div class="result-card">
              <div class="result-label">Bias</div>
              <div class="result-value">${escapeHtml(trend.bias || "NONE")}</div>
              <div class="result-badge ${scoreBadgeClass}">
                Score ${Number.isFinite(score) ? score.toFixed(1) : "–"}
              </div>
            </div>
            <div class="result-card">
              <div class="result-label">Price Source</div>
              <div class="result-value">${escapeHtml(liveUsed)}</div>
              <div class="result-badge">
                LTP ${liveLtp}
              </div>
            </div>
          </div>

          <div class="strikes-card">
            <div class="result-label" style="margin-bottom:6px;">Option Strikes</div>
            <div class="strike-row">
              <span><strong>CE</strong> ${ce.strike != null ? escapeHtml(ce.strike) : "–"}</span>
              <span>${ce.entry != null ? "Entry " + escapeHtml(ce.entry) : ""}</span>
            </div>
            <div class="strike-row">
              <span><strong>PE</strong> ${pe.strike != null ? escapeHtml(pe.strike) : "–"}</span>
              <span>${pe.entry != null ? "Entry " + escapeHtml(pe.entry) : ""}</span>
            </div>
            <div class="strike-row">
              <span><strong>Straddle</strong> ${
                str.strike != null ? escapeHtml(str.strike) : "–"
              }</span>
              <span>${str.entry != null ? "Entry " + escapeHtml(str.entry) : ""}</span>
            </div>
          </div>

          <div class="comment-card">
            <div class="result-label" style="margin-bottom:3px;">Comment</div>
            <div>${escapeHtml(trend.comment || "—")}</div>
            ${
              errorText
                ? `<div class="error-text">Live data: ${escapeHtml(errorText)}</div>`
                : ""
            }
          </div>
        `;

        nice.innerHTML = html;
        nice.classList.remove("hidden");
        raw.style.display = "none";
      }

      function handleChange() {
        const text = raw.textContent.trim();
        if (!text) {
          nice.classList.add("hidden");
          return;
        }
        try {
          const json = JSON.parse(text);
          renderPretty(json);
        } catch (e) {
          // JSON parse fail → raw दिखाओ
          nice.classList.add("hidden");
          raw.style.display = "block";
        }
      }

      const observer = new MutationObserver(handleChange);
      observer.observe(raw, { childList: true, characterData: true, subtree: true });

      // पहले से कुछ हो तो
      handleChange();
    })();
  </script>
</body>
</html>
